            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="6dip"
            android:layout_below="@+id/image3View3"
            android:textColor="#3b5998"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="After successfully adding new appliance you should be able to see the appliance in the listview on the dashboard; select the type of appliance you want to use remotely from the listview... "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="-30dp"
            android:layout_above="@+id/textViewpn"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewmor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/work"
            android:layout_marginTop="70dp"
            android:overScrollMode="never"
            android:layout_below="@+id/textView312"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewpn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="You can view user profile, Logout and read about power when you tap on the three horizontal lines on the top left hand corner."
            android:textSize="16sp"
            android:layout_marginLeft="6dip"
            android:layout_below="@+id/imageViewmor"
            android:layout_marginTop="60dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView331"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Board confirmation"
            android:textSize="20sp"
            android:layout_marginTop="26dp"
            android:textColor="#3b5998"
            android:layout_below="@+id/textViewpn"
            android:layout_marginLeft="6dip"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewvpn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Wait about four to five seconds for confirmation from the board saying success your board number is activated; then you are ready to use appliance...else check board number properly from the box and return to step 2."
            android:textSize="16sp"
            android:layout_below="@+id/textView331"
            android:layout_marginLeft="6dip"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageViewmor33"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/activeboard"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_below="@+id/textViewvpn"
