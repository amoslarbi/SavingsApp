            android:layout_marginBottom="10dp"
            android:layout_marginTop="41dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:overScrollMode="never"

            />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Signing Up"
            android:textSize="20sp"
            android:layout_marginTop="23dp"
            android:textColor="#3b5998"
            android:textStyle="bold"
            android:layout_alignTop="@+id/image3View3"
            android:layout_toRightOf="@+id/image3View3"
            android:layout_toEndOf="@+id/image3View3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Sign up with your google account..." />


        <TextView
            android:id="@+id/textView312"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Tap on the button on the bottom left hand corner to add new appliance, In adding new appliance you are to input the appliance name, socket number and number of watts the appliance consumes per hour..."
